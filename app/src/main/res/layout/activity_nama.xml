<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".NamaActivity"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/brush_tab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To"
                android:textColor="#ffff"
                android:textSize="42dp"
                android:fontFamily="@font/helenafont"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Jimmy"
                        android:layout_toLeftOf="@id/weddingIcon"
                        android:textColor="#ffff"
                        android:textSize="25dp"
                        android:fontFamily="@font/helenafont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weddingIcon"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/wedding" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profileTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wulan"
                        android:layout_toRightOf="@id/weddingIcon"
                        android:textColor="#ffff"
                        android:textSize="25dp"
                        android:fontFamily="@font/helenafont"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wedding"
                android:textColor="#ffff"
                android:textSize="28dp"
                android:fontFamily="@font/helenafont"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mr/Mrs"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:fontFamily="@font/psansregular"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/Mr"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_outline"
                    android:hint="Name"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/Mrs"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_outline"
                    android:hint="Mrs."
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/nextButton"
                    android:text="Next"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_btn"
                    android:fontFamily="@font/psansregular"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="20dp"
        android:text="Thank You"
        android:gravity="bottom"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:fontFamily="@font/helenafont"/>


</LinearLayout>