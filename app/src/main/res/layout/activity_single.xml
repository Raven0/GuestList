<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".SingleActivity"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/brush_tab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To"
                android:textColor="#ffff"
                android:textSize="42dp"
                android:fontFamily="@font/helenafont"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Jimmy"
                        android:layout_toLeftOf="@id/weddingIcon"
                        android:textColor="#ffff"
                        android:textSize="25dp"
                        android:fontFamily="@font/helenafont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weddingIcon"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/wedding" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profileTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wulan"
                        android:layout_toRightOf="@id/weddingIcon"
                        android:textColor="#ffff"
                        android:textSize="25dp"
                        android:fontFamily="@font/helenafont"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wedding"
                android:textColor="#ffff"
                android:textSize="28dp"
                android:fontFamily="@font/helenafont"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/border_single_mr_mrs" />

            <ImageView
                android:id="@+id/imgBtnCancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/buttoon_hapus"
                android:layout_alignEnd="@id/imgView"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Mr.Asep"
            android:fontFamily="@font/psansregular"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/uploadBtn"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="20dp"
        android:text="Thank You"
        android:gravity="bottom"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:fontFamily="@font/helenafont"/>

</LinearLayout>